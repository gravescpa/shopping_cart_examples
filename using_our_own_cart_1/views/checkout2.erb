<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1>Checkout - Delivery method</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb">
                    <li><a href="/">Home</a>
                    </li>
                    <li>Checkout - Delivery method</li>
                     
                </ul>
            </div>
        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-9 clearfix" id="checkout">
                <div class="box">
                    <form method="post" action="/checkout4">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="/checkout1_prefilled"><i class="fa fa-map-marker"></i><br>Address</a>
                            </li>
                            <li class="active"><a href="#"><i class="fa fa-truck"></i><br>Delivery Method</a>
                            </li>
                            <li class="disabled"><a href="#"><i class="fa fa-eye"></i><br>Order Review</a>
                            </li>
                        </ul>
                        <h5>* These shipping methods will be available at a later date </h5>
                        <div class="content">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="box shipping-method">
                                        <h4>* Customer Pick Up</h4>
                                        <p>We will email you when you order is ready for pickup.</p>
                                        <div class="box-footer text-center">
                                            <!-- <input type="radio" name="delivery" value="delivery1"> -->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="box shipping-method">
                                        <h4>* UPS Next Day Air</h4>
                                        <p>Get it right on next day - fastest option possible.</p>
                                        <div class="box-footer text-center">
                                            <!-- <input type="radio" name="delivery" value="delivery2"> -->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="box shipping-method">
                                        <h4>* UPS 2nd Day Air</h4>
                                        <p>Get it within two business days.</p>
                                        <div class="box-footer text-center">
                                            <!-- <input type="radio" name="delivery" value="delivery3"> -->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="box shipping-method">
                                        <h4>* UPS Ground</h4>
                                        <p>Get it within three to five business days.</p>
                                        <div class="box-footer text-center">
                                            <!-- <input type="radio" name="delivery" value="delivery3"> -->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="box shipping-method">
                                        <h4>Spirit Wear</h4>
                                        <p>Spirit Wear will be delivered by your spirit leader.</p>
                                        <div class="box-footer text-center">
                                            <input type="radio" name="delivery" value="delivery3">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.content -->
                        <div class="box-footer">
                            <div class="pull-left">
                                <a href="/checkout1_prefilled" class="btn btn-default"><i class="fa fa-chevron-left"></i>Back to Addresses</a>
                            </div>
                            <div class="pull-right">
                                <button type="submit" class="btn btn-template-main">Continue to Order Review <i class="fa fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col-md-9 -->
            <div class="col-md-3">
                <div class="box" id="order-summary">
                    <div class="box-header">
                        <h3>Order summary</h3>
                    </div>
                    <p class="text-muted">Shipping and additional costs are calculated based on the values you have entered.</p>

                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                <tr>
                                     <td>Order subtotal</td>
                                    <th>$<%=sprintf "%.2f", ordertotal %></th>
                                    

                                </tr>
                                <tr>
                                    <td>Shipping and handling</td>
                                    <th>$10.00</th>
                                </tr>
                                <tr>
                                    <td>Tax</td>
                                    <th>$0.00</th>
                                </tr>
                                <tr class="total">
                                    <td>Total</td>
                                    <th>$<%=sprintf "%.2f", ordertotal + 10.00 %></th>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
            <!-- /.col-md-3 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</div>
<!-- /#content -->
